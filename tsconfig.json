{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "files": [
      "compileScripts.ts",
      "server.ts"
    ],
    "include": [
      "handlers/*.ts",
      "modules/*.ts",
      "src/www/*.ts",
      "src/www/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
